{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "timezone": "browser",
  "title": "Docker Containers",
  "uid": "docker-containers",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "CPU Load",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "avg(rate(container_cpu_usage_seconds_total{name=~\"social-net-postgres.*\"}[5m])) * 100", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Containers",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "count(container_last_seen{name=~\"social-net-postgres.*\"})", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "white" }
        }
      }
    },
    {
      "id": 3,
      "title": "Memory Load",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 4, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "sum(container_memory_usage_bytes{name=~\"social-net-postgres.*\"}) / sum(machine_memory_bytes) * 100", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Used Memory",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "sum(container_memory_usage_bytes{name=~\"social-net-postgres.*\"})", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "id": 5,
      "title": "Storage Load",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 4, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "sum(container_fs_usage_bytes{name=~\"social-net-postgres.*\"}) / sum(container_fs_limit_bytes{name=~\"social-net-postgres.*\"}) * 100", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0, "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Used Storage",
      "type": "stat",
      "gridPos": { "h": 5, "w": 4, "x": 20, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "sum(container_fs_usage_bytes{name=~\"social-net-postgres.*\"})", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "id": 7,
      "title": "Running Containers",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "count(container_last_seen{name=~\"social-net-postgres.*\"})", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 80, "barAlignment": 0 },
          "color": { "mode": "fixed", "fixedColor": "yellow" }
        }
      }
    },
    {
      "id": 8,
      "title": "CPU per Container",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"social-net-postgres.*\"}[5m])) by (name) * 100", "legendFormat": "{{name}}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "custom": { "fillOpacity": 20 } }
      }
    },
    {
      "id": 9,
      "title": "I/O Usage",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 16, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "datasource": { "type": "prometheus", "uid": "prometheus" }, "expr": "rate(container_fs_writes_bytes_total{name=~\"social-net-postgres.*\"}[5m])", "legendFormat": "{{name}} write", "refId": "A", "editorMode": "code", "range": true, "instant": false },
        { "datasource": { "type": "prometheus", "uid": "prometheus" }, "expr": "rate(container_fs_reads_bytes_total{name=~\"social-net-postgres.*\"}[5m])", "legendFormat": "{{name}} read", "refId": "B", "editorMode": "code", "range": true, "instant": false }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "custom": { "fillOpacity": 20, "lineWidth": 2, "showPoints": "never", "spanNulls": true }
        }
      },
    },
    {
      "id": 10,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "rate(container_cpu_usage_seconds_total{name=~\"social-net-postgres.*\"}[5m]) * 100", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "custom": { "fillOpacity": 30, "lineWidth": 2 }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["min", "max", "mean"] }
      }
    },
    {
      "id": 11,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "container_memory_usage_bytes{name=~\"social-net-postgres.*\"}", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "custom": { "fillOpacity": 30, "lineWidth": 2 }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["min", "max", "mean"] }
      }
    },
    {
      "id": 12,
      "title": "Container Network RX",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "rate(container_network_receive_bytes_total{name=~\"social-net-postgres.*\"}[5m])", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "Bps", "custom": { "fillOpacity": 20, "lineWidth": 2 } }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "id": 13,
      "title": "Container Network TX",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [{ "expr": "rate(container_network_transmit_bytes_total{name=~\"social-net-postgres.*\"}[5m])", "legendFormat": "{{name}}", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "Bps", "custom": { "fillOpacity": 20, "lineWidth": 2 } }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    }
  ],
  "templating": { "list": [] }
}
